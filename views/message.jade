extends layout 

block content 

  form(action="", method="post" class='w-50 mx-auto text-white fs-5 mt-5 pt-5')
    h1(class='text-info text-center mb-4') Create new message
    div(class='mb-4 d-flex flex-column w-50 mx-auto')
      label(class='mb-2' for='title') Title
      input(type='text' id='title' name='title' required class='form-control' minlength="4" maxlength="30")
    div(class='mb-4 d-flex flex-column w-50 mx-auto')
      label(class='mb-2 form-label' for='content') Message
      textarea(rows="6" id='content' name='content' required class='form-control' minlength="4" maxlength="100")
      button(type='submit' class='btn text-white bg-info my-5 w-50 mx-auto') Create message
  div(class='w-50 mx-auto')
  if errors
    for error in errors 
      h4(class='text-light')=error.msg